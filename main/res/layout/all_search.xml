<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="149dp"
        android:layout_marginTop="223dp"
        android:text=""
        android:textColor="@android:color/holo_red_dark"
        android:textSize="20dp"  />

    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="89dp"
        android:background="@color/colorAccent"
        android:enabled="false"
        android:onClick="addtocartall"
        android:text="ADD TO CART"
        android:textColor="@android:color/background_dark"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button4"
        android:layout_alignStart="@+id/textView17"
        android:layout_marginBottom="40dp"
        android:text="Quantity:"
        android:textColor="@android:color/holo_blue_dark"
        android:textStyle="bold"
        android:textSize="20dp"
        android:visibility="invisible" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="1"
        android:visibility="invisible"
        android:cursorVisible="false"
        android:layout_alignBaseline="@+id/textView5"
        android:layout_alignBottom="@+id/textView5"
        android:layout_toEndOf="@+id/textView16" />

    <Button
        android:id="@+id/button8"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:layout_above="@+id/textView5"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="39dp"
        android:background="@color/colorAccent"
        android:onClick="plusall"
        android:text="+"
        android:textColor="@android:color/background_dark"
        android:visibility="invisible" />

    <Button
        android:id="@+id/button9"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:layout_alignEnd="@+id/button8"
        android:layout_alignStart="@+id/button8"
        android:layout_below="@+id/button8"
        android:layout_marginTop="16dp"
        android:background="@color/colorAccent"
        android:enabled="false"
        android:onClick="minusall"
        android:text="-"
        android:textColor="@android:color/background_dark"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="34dp"
        android:text="Name:"
        android:textColor="@android:color/holo_blue_dark"
        android:textStyle="bold"
        android:visibility="invisible"
        android:textSize="20dp"
        android:layout_alignBottom="@+id/textView18"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Marked Price:"
        android:textColor="@android:color/holo_blue_dark"
        android:textStyle="bold"
        android:visibility="invisible"
        android:textSize="20dp"
        android:layout_alignBaseline="@+id/textView19"
        android:layout_alignBottom="@+id/textView19"
        android:layout_alignStart="@+id/textView14" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Discount(%):"
        android:textColor="@android:color/holo_blue_dark"
        android:textStyle="bold"
        android:visibility="invisible"
        android:textSize="20dp"
        android:layout_above="@+id/textView17"
        android:layout_alignStart="@+id/textView15"
        android:layout_marginBottom="12dp" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:text="Discounted Price:"
        android:textColor="@android:color/holo_blue_dark"
        android:textStyle="bold"
        android:visibility="invisible"
        android:textSize="20dp"
        android:layout_below="@+id/textView"
        android:layout_alignStart="@+id/textView16" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="15dp"
        android:textColor="@android:color/holo_red_dark"
        android:layout_above="@+id/textView15"
        android:layout_alignEnd="@+id/textView19"
        android:layout_marginBottom="24dp" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="20dp"
        android:textColor="@android:color/holo_red_dark"
        android:layout_marginBottom="24dp"
        android:layout_above="@+id/textView16"
        android:layout_alignEnd="@+id/textView20" />

    <TextView
        android:id="@+id/textView20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="20dp"
        android:textColor="@android:color/holo_red_dark"
        android:layout_alignBaseline="@+id/textView16"
        android:layout_alignBottom="@+id/textView16"
        android:layout_alignEnd="@+id/textView21" />

    <TextView
        android:id="@+id/textView21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="20dp"
        android:textColor="@android:color/holo_red_dark"
        android:layout_alignBaseline="@+id/textView17"
        android:layout_alignBottom="@+id/textView17"
        android:layout_alignEnd="@+id/editText2" />

    <TextView
        android:id="@+id/textView34"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="YOUR MEDICINE"
        android:layout_marginBottom="16dp"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor="@android:color/holo_red_dark"
        android:layout_above="@+id/textView14"
        android:layout_centerHorizontal="true" />

</RelativeLayout>