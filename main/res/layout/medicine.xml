<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="52dp"
        />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinner1"
        android:layout_marginTop="148dp"
        android:text=""
        android:textSize="15dp"
        android:textStyle="italic"
        android:layout_toEndOf="@+id/textView3" />

    <Button
        android:id="@+id/button5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="38dp"
        android:background="@color/colorAccent"
        android:enabled="false"
        android:onClick="addtocart"
        android:text="ADD TO CART"
        android:textColor="@android:color/background_dark"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp"
        android:text="TextView"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="70px"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/editText"
        android:layout_alignStart="@+id/textView9"
        android:text="Quantity"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="20dp"
        android:textStyle="bold|italic"
        android:visibility="invisible" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="8"
        android:inputType="number"
        android:text="1"
        android:cursorVisible="false"
        android:visibility="invisible"
        android:layout_alignBottom="@+id/button7"
        android:layout_toEndOf="@+id/textView7" />

    <Button
        android:id="@+id/button6"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:layout_marginEnd="12dp"
        android:background="@color/colorAccent"
        android:onClick="plus"
        android:text="+"
        android:textColor="@android:color/background_dark"
        android:textStyle="bold"
        android:visibility="invisible"
        android:layout_above="@+id/editText"
        android:layout_alignEnd="@+id/buttonpr"
        android:layout_marginBottom="13dp" />

    <Button
        android:id="@+id/button7"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:background="@color/colorAccent"
        android:enabled="false"
        android:onClick="minus"
        android:text="-"
        android:textColor="@android:color/background_dark"
        android:textStyle="bold"
        android:visibility="invisible"
        android:layout_above="@+id/buttonpr"
        android:layout_alignStart="@+id/button6"
        android:layout_marginBottom="29dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/spinner1"
        android:layout_marginStart="29dp"
        android:layout_marginTop="26dp"
        android:text="Name:"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="20dp"
        android:textStyle="bold|italic"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView6"
        android:layout_below="@+id/textView6"
        android:layout_marginTop="13dp"
        android:text="Marked Price:"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="20dp"
        android:textStyle="bold|italic"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView7"
        android:layout_below="@+id/textView7"
        android:layout_marginTop="15dp"
        android:text="Discount(%):"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="20dp"
        android:textStyle="bold|italic"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView8"
        android:layout_alignTop="@+id/textView2"
        android:text="Discounted Price:"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="20dp"
        android:textStyle="bold|italic"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/colorPrimary"
        android:textSize="15dp"
        android:textStyle="italic"
        android:layout_above="@+id/textView7"
        android:layout_toEndOf="@+id/textView9" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/colorPrimary"
        android:textSize="15dp"
        android:textStyle="italic"
        android:layout_alignTop="@+id/textView7"
        android:layout_alignStart="@+id/textView12" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/colorPrimary"
        android:textSize="15dp"
        android:textStyle="italic"
        android:layout_alignTop="@+id/textView8"
        android:layout_alignStart="@+id/textView2" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/colorPrimary"
        android:textSize="15dp"
        android:textStyle="italic"
        android:layout_alignTop="@+id/textView2"
        android:layout_toEndOf="@+id/textView2" />

    <Button
        android:id="@+id/buttonpr"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_above="@+id/button5"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="40dp"
        android:layout_marginEnd="10dp"
        android:background="@color/colorAccent"
        android:text="Capture and Attach Here"
        android:textColor="@android:color/background_dark"
        android:textStyle="bold"
        android:textSize="10dp"
        android:visibility="invisible"
        android:layout_toEndOf="@+id/textView3" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/ic_launcher"
        android:visibility="invisible"
        android:layout_alignTop="@+id/buttonpr"
        android:layout_alignStart="@+id/textView4"
        android:layout_marginStart="19dp" />

</RelativeLayout>